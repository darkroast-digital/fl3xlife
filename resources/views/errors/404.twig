{% extends 'layouts/app.twig' %}
{% block pageclass %}error{% endblock %}
{% block title %}Page Not Found{% endblock %}

{% block loader %}
    <div class="loading-page is--loading">
        <div class="loader">Loading...</div>
    </div>
{% endblock %}

{% block content %}

<header class="header">
    <div class="header__container container">
        <nav class="nav">
            <div class="nav__container container--full">
                <div class="logo-wrapper">
                    <a href="{{ path_for('home') }}" class="nav__brand"><img src="/assets/img/logo.png" alt="FL3X-LIFE.com" draggable="false"></a>
                </div>
                <div class="menu">
                    <ul class="nav__navbar is--active">
                        <li><a href="{{ path_for('home') }}">Home</a></li>
                        <li><a href="{{ path_for('home') }}#shop">Shop</a></li>
                        <li><a href="{{ path_for('home') }}#schedule">Schedule</a></li>
                        <li><a href="{{ path_for('home') }}#instructors">Instructors</a></li>
                        <li><a href="{{ path_for('home') }}#memberships">Memberships</a></li>
                        <li><a href="{{ path_for('home') }}#stories">Success Stories</a></li>
                        <li><button class="modal__trigger">Contact</button></li>
                    </ul>
                </div>
                 {% include 'partials/hamburger.twig' %}
            </div>
        </nav>
    </div>
</header>

<section class="error-info">
    <div class="error-hero">
        <div class="error-hero__container container">
            <h1>Page Not Found</h1>
        </div>
    </div>
    <div class="error-info__container container">
        <p>Oh dear, it seems the page you were looking for isn't here or just doesn't exist.</p>
        <a href="{{ path_for('home') }}"><strong>Back to home.</strong></a>
    </div>
</section>

<footer class="footer">
    <div class="footer__container container">
        <div class="top container--full">
            <div class="column-3 about-socials">
                <div class="text">
                    <h3>About FL3X Fitness</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed quis purus auctor, rutrum nulla nec, aliquam neque. Nulla auctor egestas enim, ac auctor ex elementum sed.</p>
                </div>
                <div class="socials">
                    <a href="https://twitter.com/mr_c3o_" target="_blank"><i class="fa fa-twitter"></i></a>
                    <a href="" target="_blank"><i class="fa fa-facebook"></i></a>
                    <a href="https://instagram.com/Mr_C3O" target="_blank"><i class="fa fa-instagram"></i></a>
                </div>
            </div>
            <div class="column-3 hours">
                <h3>Gym Hours</h3>
                <p>Monday to Tuesday: 8:00 - 19:00<br/>
                    Wednesday to Thursday: 8:00 - 19:00<br/>
                    Friday to Saturday: 8:00 - 19:00<br/>
                    Sunday: 8:00 - 19:00</p>
