{% extends 'layouts/app.twig' %}
{% block pageclass %}auth{% endblock %}
{% block title %}Reset Password{% endblock %}

{% block content %}

<section class="reset">
    <div class="reset__container container">
        <div class="logo__container column-5">
            <a href="{{ path_for('home') }}">
                <img src="/assets/img/logo.png" alt="FL3X-LIFE.com" draggable="false">
            </a>
        </div>

        <div class="form__container column-7">
            <h1>Reset Password</h1>
            <form action="{{ path_for('reset', { 'token': token }) }}" method="post" class="form reset-form">
                <label for="password">New Password</label>
                <div class="field {{ errors.password ? 'is-error' : '' }}">
                    <input type="password" name="password" value="{{ old.password }}" required>
                </div>
                {% if errors.password %}
                    <span><small>{{ errors.password | first }}</small></span>
                {% endif %}
                <button class="button submit">Submit</button>
            </form>

            <a href="{{ path_for('login') }}">Login</a>
        </div>
    </div>
</section>

{% endblock %}
